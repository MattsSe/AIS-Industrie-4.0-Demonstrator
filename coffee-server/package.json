{
  "name": "coffee-server",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node --require ts-node/register index.ts",
    "build": "npm run build:swagger && tsc",
    "copy:server-swagger": "copyfiles -u 1 lib/opcua/api/*  opcua/controllers/*.js dist/server",
    "build:watch": "tsc -w",
    "build-ts": "tsc",
    "build:swagger": "tsoa routes && npm run build-ts && tsoa swagger",
    "dev": "nodemon ./dist/index.js",
    "ua-server": "npm run copy:server-swagger && nodemon ./dist/opcua/bootstrap.js",
    "demon": "npm run build:swagger && concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "clean": "rimraf dist",
    "docs": "compodoc -p tsconfig.json -d docs",
    "docs:serve": "compodoc -p tsconfig.json -d docs -s",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "postinstall": "rimraf ./node_modules/node-opcua/*.d.ts"
  },
  "dependencies": {
    "@types/node-opcua": "file:@types/node-opcua",
    "@types/socket.io": "^1.4.38",
    "body-parser": "^1.18.3",
    "codelyzer": "^4.4.4",
    "cookie-parser": "~1.4.3",
    "copyfiles": "^2.1.0",
    "debug": "~2.6.9",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "fs": "0.0.1-security",
    "http-errors": "~1.6.2",
    "inversify": "^4.13.0",
    "inversify-binding-decorators": "^4.0.0",
    "jsonix": "^2.4.1",
    "method-override": "^3.0.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "node-opcua": "^0.4.5",
    "node-opcua-samples": "^0.4.5",
    "node-sass-middleware": "0.11.0",
    "pug": "2.0.0-beta11",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.2",
    "sequelize": "^4.38.1",
    "sequelize-typescript": "^0.6.7-beta.0",
    "socket.io": "^2.1.1",
    "sqlite3": "^4.0.2",
    "strong-error-handler": "^3.2.0",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.0.1",
    "tsoa": "^2.2.0",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.10.1",
    "@types/sqlite3": "^3.1.3",
    "compodoc": "0.0.41",
    "concurrently": "^4.0.1",
    "karma": "^3.0.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "4.0.2",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.0.3",
    "webpack": "^4.20.1",
    "webpack-cli": "^3.1.1",
    "webpack-node-externals": "^1.7.2"
  }
}
